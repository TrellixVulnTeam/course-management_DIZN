<div class="mt-4">
    <div class="row">
        <div class="col">
            <h3 class="mb-4 text-center">Tạo mới khóa học</h3>
            <form method="POST" action="/courses/store">
                <div class="form-group row">
                    <label for="name" class="col-sm-4 col-form-label">Tên khóa học</label>
                    <div class="col-sm-8">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Nhập tên khóa học">
                    </div>
                </div>
                
                <div class="form-group row">
                    <label for="description" class="col-sm-4 col-form-label">Mô tả khóa học</label>
                    <div class="col-sm-8">
                        <input type="text" name="description" class="form-control" id="description" placeholder="Nhập mô tả">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="videoId" class="col-sm-4 col-form-label">Video ID</label>
                    <div class="col-sm-8">
                        <input type="text" name="videoId" class="form-control" id="videoId">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="level" class="col-sm-4 col-form-label">Mức độ của khóa học</label>
                    <div class="col-sm-8">
                        <input type="text" name="level" class="form-control" id="level">
                    </div>
                </div>

                <div class="row">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>